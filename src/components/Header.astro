---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../config';
---

<header class="header">
  <div class="header__inner">
    <div class="header__logo"> <img src="/public/logo.svg"></div>
    <nav>
      <ul class="header__list">
        <li class="header__item"><HeaderLink href="/">TOP</HeaderLink></li>
        <li class="header__item"><HeaderLink href="/about">ABOUT</HeaderLink></li>
        <li class="header__item"><HeaderLink href="/works">WORKS</HeaderLink></li>
        <li class="header__item"><HeaderLink href="/inquiry">INQUIRY</HeaderLink></li>
      </ul>
      <!-- /.header__list -->
    </nav>
  </div>
  <!-- /.header__inner -->
</header>
<style>
	.header {
    position: fixed;
    top: 0;
    transform: translateX(-50%);
    left: 50%;
    width: 1341px;
    max-width: 100%;
    padding: 27px 45px;
    box-sizing: border-box;
    z-index: 999;
  }

  .header__inner {
    display: flex;
    align-items: center;
    border-radius: 100px;
    justify-content: space-between;
    background-color: #FFFFFF;
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    padding: 5px 0;
  }

  .header__logo {
    width: 143px;
    padding-left: 20px;
  }

  .header__list {
    display: flex;
    padding-left: 0;
    padding-right: 20px;
  }

  .header__item {
    list-style: none;
  }

  .header__item:not(:first-child) {
    margin-left: 39px;
  }

  .header__item a{
    color: #565656;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 600;
    font-size: 20px;
    line-height: 34px;
    margin-right: 0;
  }

  .header__item a.active {
    text-decoration: none;
  }

  @media screen and (max-width: 959px) {
